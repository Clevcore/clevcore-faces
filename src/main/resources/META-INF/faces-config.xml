<?xml version="1.0"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">
	<application>
		<navigation-handler>ar.com.clevcore.faces.RedirectNavigationHandler</navigation-handler>

		<locale-config>
			<default-locale>es</default-locale>
			<supported-locale>es</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>ar.com.clevcore.resources.clevcoreMessages</base-name>
			<var>clevcoreMsg</var>
		</resource-bundle>


		<resource-bundle>
			<base-name>ar.com.clevcore.resources.clevcoreIcons</base-name>
			<var>clevcoreIcon</var>
		</resource-bundle>

		<resource-handler>org.omnifaces.resourcehandler.UnmappedResourceHandler</resource-handler>
	</application>
</faces-config>